<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragmentFromWhereFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:background="@drawable/xml_button_def_bg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_margin="2dp">

            <ImageView
                android:background="@drawable/icon_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:textSize="14sp"
                    android:id="@+id/fragmentFromWhereAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_street"
                    android:singleLine="true"
                    android:background="@null"
                    android:focusable="false" />
            </LinearLayout>

            <ImageView
                android:id="@+id/fragmentPlaceSelectorLocation"
                android:background="@drawable/icon_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginRight="2dp"
                android:orientation="horizontal"
                android:background="@drawable/xml_button_def_bg">

                <EditText
                    android:id="@+id/fragmentPlaceSelectorHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_home"
                    android:singleLine="true"
                    android:background="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                android:background="@drawable/xml_button_def_bg">

                <EditText
                    android:id="@+id/fragmentPlaceSelectorEntrance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="number"
                    android:hint="@string/hint_entrance"
                    android:background="@null" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/fragmentPlaceSelectorComment"
            android:layout_margin="2dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:background="@drawable/xml_button_def_bg"
            android:layout_height="wrap_content"
            android:hint="@string/hint_comment" />


        <Button
            android:layout_margin="3dp"
            android:id="@+id/fragmentPlaceSelectorAddFavorite"
            android:background="@drawable/xml_yellow_button_bg"
            android:text="@string/add_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>


</RelativeLayout>