<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/xml_button_def_bg"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/xml_button_def_bg_left"
                android:id="@+id/fragmentTaxiBookingOriginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/from"
                style="@style/fragmentBeginButton"
                android:layout_weight="26" />

            <EditText
                android:inputType="none"
                android:focusable="false"
                android:id="@+id/fragmentTaxiBookingOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fragmentBeginButton"
                android:layout_weight="10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragmentBeginWhereBouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/xml_button_def_bg">

            <Button
                android:background="@drawable/xml_button_def_bg_left"
                android:id="@+id/fragmentTaxiBookingDestinationButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/whereabouts"
                style="@style/fragmentBeginButton"
                android:layout_weight="26" />

            <EditText
                android:inputType="none"
                android:focusable="false"
                android:id="@+id/fragmentTaxiBookingDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fragmentBeginButton"
                android:layout_weight="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/xml_button_def_bg">

            <Button
                android:background="@drawable/xml_button_def_bg_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/when"
                style="@style/fragmentBeginButton"
                android:layout_weight="26" />

            <TextView
                android:id="@+id/fragmentTaxiBookingOrderTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fragmentBeginButton"
                android:layout_weight="10" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/xml_button_def_bg">

            <Button
                android:id="@+id/fragmentTaxiBookingAddWishes"
                android:background="@drawable/xml_button_def_bg_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wishes"
                style="@style/fragmentBeginButton"
                android:layout_weight="26" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/wifiImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/notSmokesImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/animalImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/airConditionImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/chieldImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/paymentImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/sand">

            <Button
                android:id="@+id/fragmentTaxiBookingSearchAuto"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@drawable/blue_button_bg"
                android:text="@string/search_auto" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>